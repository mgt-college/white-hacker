# alert icmp any any -> any any (msg:"ICMP Testing Rule"; sid:1000001; rev:1;)
alert tcp any any -> any 22 (msg:"SSH Connection"; \
    flags:S+; \
    sid:1000002; \
    rev:2;)
alert tcp any any -> any 22 (msg:"SSH Threshold"; \
    flags:S+; \
    threshold:type threshold, track by_src, count 3, seconds 20; \ 
    sid:1000003; \
    rev:1;)
alert tcp any any -> any 80 (msg:"HTTP Connection"; \
    flags:S+; \
    sid:1000004; \
    rev:1;)
alert tcp any any -> any 80 (msg:"HTTP Threshold"; \
    flags:S+; \
    threshold:type threshold, track by_src, count 3, seconds 20; \ 
    sid:1000005; \
    rev:1;)
alert tcp any any -> any 80 (msg:"NGINX INDEX"; \
    flags:A+; \
    uricontent:"/index.nginx-debian.html"; \
    nocase; \
    sid:1000006; \
    rev:1;)
